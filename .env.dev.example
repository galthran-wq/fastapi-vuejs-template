# =============================================================================
# Project
# =============================================================================
PROJECT_NAME=webapp
COMPOSE_PROJECT_NAME_DEV=${PROJECT_NAME}-dev
COMPOSE_PROJECT_NAME_PROD=${PROJECT_NAME}-prod

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=change-me
POSTGRES_DB=webapp
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# Dev Ports
# =============================================================================
DEV_POSTGRES_PORT=5444
DEV_NGINX_PORT=5746

# =============================================================================
# Monitoring
# =============================================================================
GRAFANA_ADMIN_PASSWORD=change-me

# =============================================================================
# Server (FastAPI)
# =============================================================================
APP_NAME=WebApp
LOG_LEVEL=info
CORS_ORIGINS=["http://localhost:5746"]
METRICS_ENABLED=true
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
